extends base.pug

block content 
    h4 Change Title of video
    form(method="POST")
        input(value=videos.title, name="title" placeholder="Video Title", required)
        input(value=videos.description name="description" placeholder="Description", required, type="text", minlength=20)
        input(value=videos.hashtags.join() name="hashtags" placeholder="Hashtags", required, type="text")
        input(value="Save", type="submit")